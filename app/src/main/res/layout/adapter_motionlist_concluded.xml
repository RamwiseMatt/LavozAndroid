<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintDimensionRatio="H,5:2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner_placeholder" />

    <TextView
        android:id="@+id/issue_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginTop="16dp"
        android:freezesText="true"
        app:layout_constraintTop_toBottomOf="@+id/main_imageview" />

    <View
        android:id="@+id/separator1_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issue_textview" />

    <ImageView
        android:id="@+id/calendar_icon_imageview"
        app:srcCompat="@drawable/icon_calendar_filled"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/separator1_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/date_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/separator1_view"
        android:textSize="12sp"
        android:textColor="@color/colorGreyLight"
        android:freezesText="true"
        app:layout_constraintLeft_toRightOf="@+id/calendar_icon_imageview"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/separator2_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_icon_imageview" />

    <ImageView
        android:id="@+id/multipleusers_icon_imageview"
        app:srcCompat="@drawable/icon_multipleusers_filled"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/separator2_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/results_disagree_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/separator2_view"
        android:textSize="12sp"
        android:textColor="@color/colorGreyLight"
        android:freezesText="true"
        app:layout_constraintLeft_toRightOf="@+id/multipleusers_icon_imageview"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/results_agree_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/results_disagree_textview"
        android:textSize="12sp"
        android:textColor="@color/colorGreyLight"
        android:freezesText="true"
        app:layout_constraintLeft_toRightOf="@+id/multipleusers_icon_imageview"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />


    <View
        android:id="@+id/separator3_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/results_agree_textview" />

    <ImageView
        android:id="@+id/pencil_icon_imageview"
        app:srcCompat="@drawable/icon_pencil_filled"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/separator3_view"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/vote_indicator_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/separator3_view"
        android:textSize="12sp"
        android:textColor="@color/colorGreyLight"
        android:freezesText="true"
        app:layout_constraintLeft_toRightOf="@+id/pencil_icon_imageview"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />


    <View
        android:id="@+id/separator4_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pencil_icon_imageview" />


    <Button
        android:id="@+id/read_more_button"
        style="@style/LavozButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:text="@string/button_read_more"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@+id/separator4_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/paddingblock_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/read_more_button" />


</android.support.constraint.ConstraintLayout>