<resources>

    <style name="LavozTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- Status bar color -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LavozToolbarTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreyDark</item> <!-- Toolbar color -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@color/colorAccent</item>
    </style>

    <style name="LavozDrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- Status bar color -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18sp</item> <!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">50dp</item> <!-- item size in menu-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:listDivider">@color/colorGreyLight</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="LavozButton">
        <item name="android:radius">25dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/round_accent_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StyledToastError">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:colorBackground">@color/colorError</item>
        <item name="android:radius">25dp</item>
    </style>

    <style name="StyledToastSuccess">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:colorBackground">@color/colorSuccess</item>
        <item name="android:radius">25dp</item>
    </style>

    <style name="StyledToastMessage">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:colorBackground">@color/colorMessage</item>
        <item name="android:radius">25dp</item>
    </style>



</resources>
